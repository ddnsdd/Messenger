    <children>
        <ComboBox fx:id="lobbyComboBox" layoutX="50.0" layoutY="30.0" prefWidth="200.0" promptText="Select Lobby" style="-fx-background-color: #E0FFFF;" />
        <Button fx:id="joinButton" layoutX="50" layoutY="150.0" prefWidth="200" mnemonicParsing="false" text="Join Lobby" textFill="#0e90e7">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
